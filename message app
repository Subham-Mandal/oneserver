<style>
#view{height:85%;width:100%;}
#textbar{height:9%;width:100%;}
#myinput{height:80%;width:80%;}
button{height:80%;width:19%;}
</style>


<p id='view'></p>

<div id='textbar'>
<input id='myinput'>
<button onclick='dopost()'>Post</button>
</div>

    <script src='https://cdn.jsdelivr.net/gh/Subham-Mandal/oneserver@main/server.js'> </script>
         
       <script>
var text=document.getElementById('myinput').value;
var path='app1';

function dopost() {
    var text = document.getElementById('myinput').value;
    server.child(path).push(text, function(error) {
        if (!error) getpost();
    });
}

function getpost() {
    server.child(path).once('value', function(snapshot) {
        document.getElementById('view').innerHTML = '';
        snapshot.forEach(function(childSnapshot) {
            document.getElementById('view').innerHTML += childSnapshot.val() + '<br>';
        });
    });
}

server.child(path).on('child_added', getpost);

     </script>
  

